             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="basketbalApp.Views.PlayersPage"
             Title="{Binding Title}">


    <StackLayout>
        <Label Text="{Binding WaarBenIk}" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" />
        <Label Text="{Binding AantalPlayers}" FontSize="Large" FontAttributes="Bold" HorizontalTextAlignment="Center" />
        <SearchBar x:Name="sbPlayers" Placeholder="zoeken" />
        <ListView x:Name="PlayersListView"
                VerticalOptions="FillAndExpand"
                HasUnevenRows="false"
                IsPullToRefreshEnabled="true"
                IsRefreshing="{Binding IsBusy, Mode=TwoWay}"
                CachingStrategy="RecycleElement"
                ItemSelected="OnPlayerTapped">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding FullName}" 
                                d:Text="Item description"
                                LineBreakMode="WordWrap"
                                Style="{DynamicResource ListItemTextStyle}"
                                FontSize="16" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

